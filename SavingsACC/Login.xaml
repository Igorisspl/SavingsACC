<Window x:Class="SavingsACC.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SavingsACC"
      mc:Ignorable="d" 
      Title="Login" Height="350" Width="400">
      
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/SavingsLogo1.png"/>
        </Grid.Background>
        <StackPanel Margin="0,89,0,35" HorizontalAlignment="Center" Width="235" RenderTransformOrigin="0.512,0.691">
            <TextBlock Text="Username:" FontFamily="Tw Cen MT Condensed" FontSize="18" Width="70"/>
            <TextBox x:Name="txtUsername" Margin="0 5 0 10"/>
            <TextBlock Text="Password:" FontFamily="Tw Cen MT Condensed" FontSize="18" Width="70"/>
            <PasswordBox x:Name="txtPassword" Margin="0 5 0 10"/>
            <Button Content="Login" Click="Login_Click" FontFamily="Tw Cen MT Condensed" FontSize="18"/>
        </StackPanel>
    </Grid>
</Window>
